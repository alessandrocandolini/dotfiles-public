{
  "diagnostic.errorSign": "✘",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.enableHighlightLineNumber": true,
  "codeLens.enable": true,
  "signature.enable": true,
  "coc.preferences.enableFloatHighlight": true,
  "suggest.noselect": false,
  "coc.preferences.jumpCommand": "drop",
  "metals.showImplicitArguments": true,

  "languageserver": {
    "kotlin": {
      "command": "$HOME/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp","--logfile=hls.log"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  }

}
