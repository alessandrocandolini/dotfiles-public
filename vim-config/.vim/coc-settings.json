{
  "diagnostic.errorSign": "✘",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.enableHighlightLineNumber": true,
  "codeLens.enable": true,
  "signature.enable": true,
  "suggest.noselect": false,
  "suggest.floatEnable": true,
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.formatOnSaveFiletypes": ["scala"],
  "coc.preferences.formatOnType":false,
  "metals.showImplicitArguments": true,
  "metals.scalafmtConfigPath": ".scalafmt.conf",
  "metals.showInferredType":true,
  "suggest.enablePreview": true,
  "signature.target": "float",

  "languageserver": {
    "kotlin": {
      "command": "kotlin-language-server",
      "rootPatterns": ["settings.gradle"],
      "filetypes": ["kotlin"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp","--logfile=hls.log", "--debug"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  }

}
